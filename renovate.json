{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "automerge": true,
  "automergeType": "pr",
  "extends": [
    "config:recommended"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "rmcrackan/Libation",
      "managerFilePatterns": [
        "recipes/recipe-*.yml"
      ],
      "matchStrings": [
        "(?<currentValue>.*?)"
      ]
    }
  ],
  "pre-commit": {
    "enabled": true
  }
}
