{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "automerge": true,
  "automergeType": "pr",
  "extends": [
    "config:recommended"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "rmcrackan/Libation",
      "managerFilePatterns": [
        "recipes/recipe-*.yml"
      ],
      "matchStrings": [
        "/(?<currentVersion>.*?)/Libation.(?<currentValue>.*?)-linux"
      ]
    }
  ],
  "packageRules": [
    {
      "matchDatasources": [
        "github-releases"
      ],
      "matchDepNames": [
        "rmcrackan/Libation"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "automerge": true
    }
  ],
  "pre-commit": {
    "enabled": true
  }
}
