{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "datasourceTemplate": "github-releases",
      "packageName": "rmcrackan/Libation",
      "managerFilePatterns": [
        "recipes/recipe-*.yml"
      ],
      "matchStrings": [
        "(?<registryUrl>.*?)(?<packageName>.*?)/releases/download/v(?<currentValue>.*?)/Libation.(?<currentValue>.*?)-linux-chardonnay-amd64.rpm"
      ],
      "autoReplaceStringTemplate": "{{{registryUrl}}}{{{packageName}}}/releases/download/v{{{newValue}}}/{{{depName}}}.{{{newValue}}}-linux-chardonnay-amd64.rpm"
    }
  ]
}